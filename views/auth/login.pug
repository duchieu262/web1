extends ../layouts/common

block content

	if errors
		each error in errors
			.alert.alert-danger= error
	.container
		.outer-area
			.auth-box.text-center
				.login-form-container
					h1 Login
					form(action="/auth/login", method="POST")
						.form-group
							label Username
							input.form-control(type="text", name="username", value = values ? values.username : "", autocomplete="off")
						.form-group
							label Password
							input.form-control(type="password", name="password", )
						button.btn.btn-sm.btn-outline-primary.mt-2 Login
						span &nbsp
					a(href="/register") Don't have an account? Register here
