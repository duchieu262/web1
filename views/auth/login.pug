extends ../layouts/common

block content
	h1 Login

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login", method="POST")
		.form-group
			label User
			input.form-control(type="text", name="username", value = values ? values.username : "", autocomplete="off")
		.form-group
			label Password
			input.form-control(type="password", name="password", )
		button.mt-2.btn.btn-primary Login
		span &nbsp
		a(href="/register") Don't have an account? Register here
