extends ../layouts/common

block content

	if errors
		each error in errors
			.alert.alert-danger= error
	.container
		.outer-area
			.auth-box.text-center
				.login-form-container
					h1 Register
					form(action="/register", method="POST", enctype="multipart/form-data")
						.form-group
							label Username
							input.form-control(type="text", name="username", value = values ? values.username : "", autocomplete="off")
						.form-group
							label Password
							input.form-control(type="password", name="password", value = values ? values.password : "")
						.form-group
							label Display Name
							input.form-control(type="text", name="displayName", value = values ? values.displayName : "", autocomplete="off")
						.form-group
							label Phone
							input.form-control(type="text", name="phone", value = values ? values.phone : "", autocomplete="off")
						button.btn.btn-sm.btn-outline-primary.mt-2 Register
										span &nbsp
					a(href="/register") or Login
